<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    android:layout_margin="@dimen/default_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="48dp"
            android:layout_height="495dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/default_margin"
            tools:layout_editor_absoluteX="8dp" />
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            android:textStyle="bold"
            android:text="Pub Name"
            tools:layout_editor_absoluteX="384dp" />
        <RatingBar
            android:id="@+id/ratingRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            tools:layout_editor_absoluteX="384dp" />
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/ratingRatingBar"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            android:text="Av. Address NÂ°00"
            tools:layout_editor_absoluteX="384dp" />
        <TextView
            android:id="@+id/eventTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/addressTextView"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            android:text="Event Type"
            tools:layout_editor_absoluteX="384dp" />
        <TextView
            android:id="@+id/horaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/eventTextView"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            android:text="22:00 - 05:00"
            tools:layout_editor_absoluteX="384dp" />
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/horaryTextView"
            app:layout_constraintStart_toEndOf="@id/logoImageView"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:text="Description"
            tools:layout_editor_absoluteX="384dp" />
        <TextView
            android:id="@+id/newsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/horaryTextView"
            app:layout_constraintStart_toEndOf="@id/descriptionTextView"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:text="News"
            tools:layout_editor_absoluteX="479dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>